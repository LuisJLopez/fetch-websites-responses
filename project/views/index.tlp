<!DOCTYPE html>
<style>
  table
  {
    border-style: outset;
    border-color: black;
    border-width: 7px;
    width: 100%;
  }
  td, th
  {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }
  tr:nth-child(even) {background-color: #f2f2f2;}
  button
  {
    border: 1px solid #ddd;
    padding: 15px 32px;
    text-align: center;
    font-size: 16px;
    float: left;
  }
</style>
<!--[if lte IE 6]><html class="preIE7 preIE8 preIE9"><![endif]-->
<!--[if IE 7]><html class="preIE8 preIE9"><![endif]-->
<!--[if IE 8]><html class="preIE9"><![endif]-->
<!--[if gte IE 9]><!--><html><!--<![endif]-->
  <head>
    <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Response Times</title>
  <meta name="author" content="Luis J. Lopez">
  </head>
  <body>
    <table>
      <tr>
        <th>URI</th>
        <th>HTTP Method</th>
        <th>Status Code</th>
        <th>Response Time in Seconds</th>
        <th>Size in Bytes</th>
      </tr>
      %for row in data:
      <tr>
        <td>{{ row['url'] }}</td>
        <td>{{ row['method'] }}</td>
        <td>{{ row['response_code']}}</td>
        <td>{{ row['response_time'] }}</td>
        <td>{{ row['size'] }}</td>
      </tr>
      %end
    </table>
    <form action="/response_time">
      <button type="submit">Sort by Response Time</button>
    </form>
    <form action="/size">
     <button type="submit">Sort by Size</button>
    </form>
  </body>
</html>
